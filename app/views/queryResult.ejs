<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= query.title %></title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    table { border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 4px 8px; }
  </style>
</head>
<body>
  <h2><%= query.title %></h2>

  <% if (rows.length > 0) { %>
    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <% Object.keys(rows[0]).forEach(col => { %>
            <th><%= col %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <% rows.forEach(row => { %>
          <tr>
            <% Object.values(row).forEach(val => { %>
              <td><%= val %></td>
            <% }) %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p><em>No results returned for this query.</em></p>
  <% } %>
  
  <p><a href="/queries">&larr; Back to queries</a></p>
</body>
</html>