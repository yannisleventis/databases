<!-- views/queries.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Choose a Query</title>
  <link rel="stylesheet" href="/css/main.css"><!-- optional -->
</head>
<body>
  <h1>Select a query to run</h1>

  <!-- Drop-down + Run button (uses slug) -->
  <form action="/queries" method="POST">
    <select name="querySlug" required>
      <% queries.forEach(q => { %>
        <option value="<%= q.slug %>"><%= q.title %></option>
      <% }) %>
    </select>
    <button type="submit">Run</button>
  </form>

  <!-- OR click a button directly -->
  <p style="margin-top:2rem">or click a button:</p>

  <% queries.forEach(q => { %>
    <form method="POST" action="/queries" style="display:inline-block">
      <input type="hidden" name="querySlug" value="<%= q.slug %>">
      <button type="submit"><%= q.title %></button>
    </form>
    <br><br><!-- two new lines after each button -->
  <% }) %>
</body>
</html>
